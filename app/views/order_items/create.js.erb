<% if @orderitem.id.nil? %>
  alert('The row could not be added! ');
<% else %>
  $('#edit-order-table > tbody').append("<%= j (render 'order_item',orderitem: @orderitem) %>");
  $('#edit-order-table > tbody >tr:last').find('.sorting_text').html($('#edit-order-table > tbody >tr').length-1);
  $('#edit-order-table > tbody >tr:last').find('.sorting').val($('#edit-order-table > tbody >tr').length-1);
<% end %>
