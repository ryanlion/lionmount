	<tr>
	  <td><input class='row-selector' type='checkbox'/></td>
	  <td>
	  	<% unless defined?(index).nil? %>
	  		<p class='sorting_text'><%= index %></p>
      <% else %>
	  		<p class='sorting_text'></p>
	  	<% end %>
	    <input name='order_items[]itemUUID' type='hidden' class='uuid' value='<%= orderitem.itemUUID %>' >
	    <input name='order_items[]id' type='hidden' class='id' value='<%= orderitem.id %>' >
	    <input name='order_items[]sorting' type='hidden' class='sorting' >
	  </td>
	  <td><input name='order_items[]product_name' type='text' placeholder='Name' class='form-control input-md' value='<%= orderitem.product_name%>'/></td>
	  <td class='img-td'>
	  	<% unless orderitem.image.nil? %>
        <a class="img-thumbnail show-pic" rel="popover" data-original-title="" data-content="" ><img height="42" width="52" src="<%= orderitem.image.thumb('500x335#').url %>" /></a>
	  	<% end %>
	  </td>
	  <td><input  name='order_items[]weight_per_product' type='text' placeholder='0.0'  class='form-control input-md' value='<%= orderitem.weight_per_product %>'></td>
	  <td><input  name='order_items[]color' type='text' placeholder='packing'  class='form-control input-md' value='<%= orderitem.color %>'></td>
	  <td><input  name='order_items[]quantity_per_unit' type='text' placeholder='packing'  class='form-control input-md' value='<%= orderitem.quantity_per_unit %>'></td>
	  <td><input  name='order_items[]item_price' type='text' placeholder='packing'  class='form-control input-md' value='<%= orderitem.item_price %>'></td>
	  <td><input  name='order_items[]unit' type='text' placeholder='packing'  class='form-control input-md' value='<%= orderitem.unit %>'></td>
	  <td><input  name='order_items[]no_of_unit' type='text' placeholder='packing'  class='form-control input-md' value='<%= orderitem.no_of_unit %>'></td>
	  <td><input  name='order_items[]volume_per_unit' type='text' placeholder='packing'  class='form-control input-md' value='<%= orderitem.volume_per_unit %>'></td>
	  <td><input  name='order_items[]item_total_weight' type='text' placeholder='packing'  class='form-control input-md' value='<%= orderitem.item_total_weight %>'></td>
	  <td><input  name='order_items[]weight_per_unit' type='text' placeholder='packing'  class='form-control input-md' value='<%= orderitem.weight_per_unit %>'></td>
	  <td><input  name='order_items[]item_total_price' type='text' placeholder='packing'  class='form-control input-md' value='<%= orderitem.item_total_price %>'></td>
	  <td><input  name='order_items[]item_total_volume' type='text' placeholder='packing'  class='form-control input-md' value='<%= orderitem.item_total_volume %>'></td>
	  <td><input  name='order_items[]remarks' type='text' placeholder='packing'  class='form-control input-md' value='<%= orderitem.remarks %>'></td>
	  <td style="white-space: nowrap;"><button type='button' class='btn btn-default btn-xs upload-icon' aria-label='Left Align'><span class='glyphicon glyphicon-folder-open' aria-hidden='true'></span></button>
      <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, order_order_item_path(orderitem.order_id, orderitem),  class: "btn btn-danger btn-xs", method: :delete, remote: true %>
      <%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>'.html_safe, order_order_items_path(orderitem.order_id, :rowno => orderitem.id),  class: "btn btn-default btn-xs", method: :post, remote: true %></td>
	</tr>
