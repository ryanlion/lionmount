<%= form_for :order, :html=> {:id => 'new-order-form'}, url: orders_path do |f| %>
<div class="row clearfix">
<div class="col-md-12 column">
  <table id="new-order-table" class="table table-bordered table-hover" data-height="500">
      <tr>
        <td>Customer Name:</td><td>
          <select name='order[user_id]'  class="form-control input-md">
            <% @users.each_with_index do |user, index| %>
              <% unless user.role == "admin" %>
                <option value="<%= user.id %>"><%= user.name%></option>
              <% end %>
            <% end %>
          </select>
        <td>Supplier:</td><td><input name="order[supplier_name]" type="text" class='form-control input-md supplier_code' /></td>
      </tr>
      <tr>
       <td>Marks:</td><td><input name="order[marks]" type="text" class='form-control input-md' /><input type="hidden" name="order[supplier_id]" id="supplier_id" value=""/></td>
      </tr>
  </table>
  <table class="table table-striped table-hover table-bordered supplier-table">
    <thead>
      <tr>
          <th></th>
          <th>Supplier Name</th>
          <th>Supplier Detail Name</th>
          <th>Contact Person</th>
          <th>Contact No</th>
          <th>Address</th>
          <th>Fax</th>
      </tr>
    </thead>
    <tbody>
 
    </tbody>
  </table>
</div>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
<button id='create_order' class="pull-right btn btn-info">Submit</button>
</div>
<% end %>
