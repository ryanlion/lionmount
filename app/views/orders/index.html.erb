<h1>All Orders</h1>
<form action="/shipments" method="post" enctype='application/json' id='shipment-form'>
<div class="table-responsive">
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Supplier Name</th>
      <th>Create Date</th>
      <th>Last Upate Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each_with_index do |order, index| %>
      <tr>
        <td class="col-md-1"><input class='row-selector' type='checkbox'/><input name='selected_id[]' type='hidden' value='<%= order.id %>' class='order-id' ></td>
        <td class="col-md-2"><%= order.customer_name %></td>
        <td class="col-md-2"><%= order.supplier_name %></td>
        <td class="col-md-2"><%= order.created_at %></td>
        <td class="col-md-2"><%= order.updated_at %></td>
        <td class="col-md-4"><%= link_to 'View', edit_order_path(order.id) , class: "btn btn-link", method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<button class="btn btn-md btn-info">Group Shipment</button>
</form>
</div>
