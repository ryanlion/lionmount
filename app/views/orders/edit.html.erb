<form id="order-form" action="">
<div class="row clearfix">
<div class="col-md-12 column">
  <table id="edit-order-table" class="table table-bordered table-hover" data-height="500">
    <thead>
      <tr>
        <th></th>
        <th>Item ID</th>
        <th>Product Name</th>
        <th>Picture</th>
        <th>Item Price</th>
      </tr>
    </thead>
    <tbody>
        <input type="hidden" value="<%= form_authenticity_token %>"/>
    </tbody>
  </table>
</div>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
<a id="add_row" class="btn btn-default pull-left">Add Row</a>
<a id='delete_row' class="pull-left btn btn-default">Delete Row</a>
<a id='save_order' data-rc-url="<%= orders_path %>" class="pull-right btn btn-info">Save</a>
</div>
</form>
<input type="hidden" id="order-id" value="<%= @order.id %>">
<div class="bs-example">
    <!-- Button HTML (to Trigger Modal) -->
    <input type="button" class="btn btn-lg btn-primary launch-modal" value="Launch Demo Modal">
    
    <!-- Modal HTML -->
    <div id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Upload File</h4>
                </div>
                <div class="modal-body">
                  <%= form_tag("/orders", id: "upload-form", remote: true, multipart: true) do %>
                    <div class="field">
                      <%= file_field_tag 'picture' %>
                      <%= hidden_field_tag(:order_id, "5") %>
                      <%= hidden_field_tag(:order_item_id, "5") %>
                    </div>
                    <div class="actions">
                      <%= submit_tag("upload") %>
                    </div>
                  <% end %>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
